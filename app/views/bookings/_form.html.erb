<%= form_for [@event, @booking] do |f| %>
  <div class="form-group">
    <%= f.label :number_of_tickets, 'Number of Tickets', class: 'control-label' %>
    <%= f.number_field :number_of_tickets, class: 'form-control' %>
    <%= render 'shared/field_errors', errors: @booking.errors[:base] %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>