<div class="container mt-5">
  <h1>Upcoming Events</h1>
  <%= link_to 'Create Event', new_event_path, class: 'btn btn-primary mb-3' %>
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= event.name %></h5>
            <p class="card-text"><%= event.description %></p>
            <p class="card-text"><%= event.location %></p>
            <p class="card-text"><%= event.start_time.strftime("%B %d, %Y %H:%M") %></p>
            <% if can? :edit, event %>
              <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-secondary' %>
            <% end %>
            <% if can? :destroy, event %>
              <%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @events %>
</div>