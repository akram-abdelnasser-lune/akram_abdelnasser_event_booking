<%= form_for(@event) do |f| %>
  <div class="form-group mb-3">
    <%= f.label :name, class: 'control-label' %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= render 'shared/field_errors', errors: @event.errors[:name] %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :description, class: 'control-label' %>
    <%= f.text_area :description, class: 'form-control' %>
    <%= render 'shared/field_errors', errors: @event.errors[:description] %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :location, class: 'control-label' %>
    <%= f.text_field :location, class: 'form-control' %>
    <%= render 'shared/field_errors', errors: @event.errors[:location] %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :start_time, class: 'control-label' %>
    <%= f.datetime_select :start_time, class: 'form-control' %>
    <%= render 'shared/field_errors', errors: @event.errors[:start_time] %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :total_tickets, class: 'control-label' %>
    <%= f.number_field :total_tickets, class: 'form-control' %>
    <%= render 'shared/field_errors', errors: @event.errors[:total_tickets] %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>