<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
        <div class="form-group mb-3">
          <%= f.label :name, class: 'control-label' %>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
          <%= render 'shared/field_errors', errors: resource.errors[:name] %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :email, class: 'control-label' %>
          <%= f.email_field :email, class: 'form-control' %>
          <%= render 'shared/field_errors', errors: resource.errors[:email] %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password, class: 'control-label' %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          <%= render 'shared/field_errors', errors: resource.errors[:password] %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation, class: 'control-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          <%= render 'shared/field_errors', errors: resource.errors[:password_confirmation] %>
        </div>

        <div class="form-group mb-3">
          <%= f.submit "Sign up", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <div class="form-group mb-3">
        <%= link_to "Already have an account? Log in", new_user_session_path, class: 'btn btn-link' %>
      </div>
    </div>
  </div>
</div>